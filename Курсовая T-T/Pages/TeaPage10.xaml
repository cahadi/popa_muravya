            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\ap357\OneDrive\Рабочий стол\Курсовая\Курсовая T-T\Курсовая T-T\Images\background-3.png"/>
        </Grid.Background>

        <ListView Background="#FFD7D2B1" BorderBrush="#FFD7D2B1" Foreground="White"
                  ItemsSource="{Binding TeaList}" Grid.Column="2" Grid.ColumnSpan="4" Grid.RowSpan="19">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id" DisplayMemberBinding="{Binding IdTea}"/>
                    <GridViewColumn Header="Тип" DisplayMemberBinding="{Binding Types_Of_Tea}"/>
                    <GridViewColumn Header="Вид" DisplayMemberBinding="{Binding Kinds_Of_Tea}"/>
                    <GridViewColumn Header="Сорт" DisplayMemberBinding="{Binding Sorts_Of_Tea}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Предыдущая" Click="TeaPage9_Click" Background="#FFD7D2B1" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="19" Grid.RowSpan="2"/>

        <Button Content="Вернуться" Click="InformationPage_Click" Background="#FFD7D2B1" Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="19" Grid.RowSpan="2"/>
        <Frame x:Name="FrameTea" Grid.ColumnSpan="9" Grid.RowSpan="22" />
    </Grid>
</Page>
