<Page x:Class="Курсовая_T_T.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Курсовая_T_T.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\ap357\OneDrive\Рабочий стол\Курсовая\Курсовая T-T\Курсовая T-T\Images\background-2.png"/>
        </Grid.Background>
            <StackPanel DataContext="{Binding Registration}">
                <Label Content="Имя"/>
                <TextBox Text="{Binding Name}"/>
                <Label Content="Фамилия"/>
                <TextBox Text="{Binding LastName}"/>
                <Label Content="Номер"/>
                <TextBox Text="{Binding Number}"/>
                <Label Content="Логин"/>
                <TextBox Text="{Binding Login}"/>
                <Label Content="Пароль"/>
                <TextBox Text="{Binding Password}"/>  
                <Label Content="Тип экскурсии"/>
            <ComboBox ItemsSource="{Binding Tour}" SelectedItem="{Binding UserTour}" DisplayMemberPath="IdTour"/>
                <Button Content="Сохранить" Command="{Binding SaveUser}"/>
            </StackPanel>
        <Frame x:Name="Frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
