<Page x:Class="Курсовая_T_T.EditUserPage"                   
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Курсовая_T_T"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="UserRegistrationPage">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\ap357\OneDrive\Рабочий стол\Курсовая\Курсовая T-T\Курсовая T-T\Images\background-2.png"/>
        </Grid.Background>
        <StackPanel DataContext="{Binding SelectUser}">
            <Label Content="Фамилия"/>
            <TextBox Text="{Binding LastName}"/>
            <Label Content="Имя"/>
            <TextBox Text="{Binding Name}"/>
        </StackPanel>
        <Frame x:Name="FrameR" Grid.ColumnSpan="7" Grid.RowSpan="7" />
        <Button Content="Сохранить" Command="{Binding SaveUser}" Margin="357,208,357,217"/>
    </Grid>
</Page>
