<Page x:Class="Курсовая_T_T.Pages.DismissGidsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Курсовая_T_T.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DismissGidsPage">
    <Grid  Background="#FF63B1F9">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"> 
            <StackPanel DataContext="{Binding DismissGids}"    >
            <Label Content="Введите логин гида, которого хотите уволить" FontFamily="Segoe Print" FontSize="16"/>
            <TextBox x:Name="Login" Text="{Binding Login}"/>
        </StackPanel>
        <Button x:Name="Dismiss" Content="Уволить" Command="{Binding DismissG}"/>
        </StackPanel>
    </Grid>
</Page>
