<Page x:Class="Курсовая_T_T.Pages.GroupListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Курсовая_T_T.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupListPage">

    <Grid Background="#FF63B1F9">
        <ListView Background="#FF5EBEDE" Foreground="Black"
                  ItemsSource="{Binding Groups}" BorderBrush="{x:Null}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Логин Гида" DisplayMemberBinding="{Binding LoginGid}"/>
                    <GridViewColumn Header="Логин Пользователя" DisplayMemberBinding="{Binding LoginUser}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
